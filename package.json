    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.8.11",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "react-router-dom": "^5.1.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
